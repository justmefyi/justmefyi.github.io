<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" th:with="title=(${#strings.startsWith(tag, '#')} ? ${tag} : '#' + ${tag})">
<head th:replace="htmlhead.thyme::head (title=${title})"/>
<body onload="prettyPrint()" th:with="rootpath=(${content.rootpath != null} ? ${content.rootpath} : ''), current_uri=(|${rootpath}tags.html|)">
    <header th:replace="header.thyme::header (title=null)"/>

    <div th:unless="${config.site_menu == 'false'}">
        <nav th:replace="menu.thyme::menu (${current_uri})"/>
    </div>

    <main th:with="plist=${#lists.toList({})}">
        <th:block th:each="p : ${tagged_documents}" th:if="${#strings.equalsIgnoreCase(p.status, 'published')}" th:text="${plist.add(p)}" th:remove="all"/>
        <section id="archive">
            <article>
                <header>
                    <h1>[[${title}]]</h1>
                </header>
                <section th:class="(${#lists.size(plist) < 10} ? 'text nocol' : 'text')">
                    <ul class="dl">
                        <th:block th:each="p : ${plist}" th:with="tagslist=(${#sets.toSet({})})">
                            <!--/* build the list of arrays of tag info */-->
                            <th:block th:if="${p.tags != null && ! #lists.isEmpty(p.tags)}">
                                <th:block th:each="t : ${#lists.sort(#lists.toList(p.tags))}" th:if="${t != null && ! #strings.isEmpty(t)}" th:with="entry=(${ {} })">
                                    <th:block th:if="${#strings.startsWith(t, '#')}" th:utext="${entry.add(t)}" th:remove="all"/>
                                    <th:block th:if="${! #strings.startsWith(t, '#')}" th:text="${entry.add('#' + t)}" th:remove="all"/>

                                    <th:block th:text="${entry.add('tags/' + #uris.escapePathSegment(t) + '.html')}" th:remove="all"/>

                                    <th:block th:text="${tagslist.add(entry)}" th:remove="all"/>
                                </th:block>
                            </th:block>
                            <li class="dt"><a th:href="|${rootpath}${p.uri}|" href="#">[[${p.title}]]</a>
                                <ul class="dl smalltext">
                                    <li class="dd"><time th:datetime="${#dates.format(p.date, 'yyyy-MM-dd')}">[[${#dates.format(p.date, 'dd MMMM yyyy')}]]</time></li>
                                    <li class="dd" th:if="${config.site_author_tags_shown}" th:with="p_author=(${p.author != null} ? ${p.author} : (${config.site_owner_shown && config.site_owner != null} ? ${config.site_owner} : ''))">[[${p_author}]]</li>
                                    <li class="dd" th:unless="${tagslist == null || #sets.isEmpty(tagslist)}">Tags:
                                        <th:block th:each="t,i : ${tagslist}"><a th:href="|${rootpath}${t[1]}|" href="#">[[${t[0]}]]</a><th:block th:unless="${i.last}">, </th:block></th:block>
                                    </li>
                                </ul>
                            </li>
                        </th:block>
                    </ul>
                </section>
            </article>
        </section>
    </main>

    <aside th:replace="sidebar.thyme::sidebar (current_uri=${current_uri})"/>

    <footer th:replace="footer.thyme::footer"/>
</body>
</html>
