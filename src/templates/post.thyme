<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head th:replace="~{htmlhead.thyme::head}"/>
<body onload="prettyPrint()" th:with="rootpath=(${content.rootpath != null} ? ${content.rootpath} : ''), current_uri=(|${rootpath}index.html|)">
    <header th:replace="~{header.thyme::header}"/>

    <div th:unless="${config.site_menu == 'false'}">
        <nav th:replace="~{menu.thyme::menu (${current_uri})}"/>
    </div>

    <main>
        <section id="post">
            <article th:with="tagslist=(${#sets.toSet({})})">
                <!--/* build the list of arrays of tag info */-->
                <th:block th:if="${content.tags != null && ! #lists.isEmpty(content.tags)}">
                    <th:block th:each="t : ${#lists.sort(#lists.toList(content.tags))}" th:if="${t != null && ! #strings.isEmpty(t)}" th:with="entry=(${ {} })">
                        <th:block th:if="${#strings.startsWith(t, '#')}" th:utext="${entry.add(t)}" th:remove="all"/>
                        <th:block th:if="${! #strings.startsWith(t, '#')}" th:text="${entry.add('#' + t)}" th:remove="all"/>

                        <th:block th:text="${entry.add('tags/' + #uris.escapePathSegment(t) + '.html')}" th:remove="all"/>

                        <th:block th:text="${tagslist.add(entry)}" th:remove="all"/>
                    </th:block>
                </th:block>
                <header>
                    <h1>[[${content.title}]]</h1>
                    <div class="timestamp"><time th:datetime="${#dates.format(content.date, 'yyyy-MM-dd')}">[[${#dates.format(content.date, 'dd MMMM yyyy')}]]</time></div>
                    <div class="author" th:if="${config.site_author_post_shown}" th:with="post_author=(${content.author != null} ? ${content.author} : (${config.site_owner_shown && config.site_owner != null} ? ${config.site_owner} : ''))">[[${post_author}]]</div>
                    <div class="tags" th:unless="${tagslist == null || #sets.isEmpty(tagslist)}">Tags:
                        <th:block th:each="t,i : ${tagslist}"><a th:href="|${rootpath}${t[1]}|" href="#">[[${t[0]}]]</a><th:block th:unless="${i.last}">, </th:block></th:block>
                    </div>
                </header>
                <section th:class="(${#strings.length(content.body) < 512} ? 'text nocol' : 'text')">[(${content.body})]</section>
            </article>
        </section>
    </main>

    <aside th:replace="~{sidebar.thyme::sidebar (current_uri=${current_uri})}"/>

    <footer th:replace="~{footer.thyme::footer}"/>
</body>
</html>
