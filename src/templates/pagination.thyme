<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<body>
    <nav th:fragment="pagination"
                th:with="basePath=(${content.rootpath != null} ? ${content.rootpath} : '')">
        <span th:unless="${config.site_pagination_numeric}">
            <a th:href="${basePath + nextFileName}"
                        th:if="${nextFileName}">&larr;Older</a>
            <span th:if="${nextFileName != null || previousFileName != null}">&hellip;</span>
            <a th:href="${basePath + previousFileName}"
                        th:if="${previousFileName}">Newer&rarr;</a>
        </span>
        <span th:if="${config.site_pagination_numeric
                            && config.index_file != null
                            && config.output_extension != null
                            && numberOfPages != null
                            && numberOfPages > 0}"
                    th:with="fileCurPgNum=(${currentPageNumber > 1}
                                    ? ${currentPageNumber}
                                    : ''),
                            prevPgNum=(${currentPageNumber > 1}
                                    ? ${currentPageNumber - 1}
                                    : 1),
                            nextPgNum=(${currentPageNumber < numberOfPages}
                                    ? ${currentPageNumber + 1}
                                    : ${numberOfPages})">
            <span th:if="${currentPageNumber > 1}">
                <a th:href="${basePath + ((prevPgNum > 1) ? prevPgNum : '')}"
                            th:text="'&larr;Prev'"></a>
            </span>

            <span th:each="i : ${#numbers.sequence(1, numberOfPages)}"
                        th:with="fileCurPgNum=(${currentPageNumber > 1}
                                        ? ${currentPageNumber}
                                        : ''),
                                filePgNum=(${i > 1} ? ${i} : '')">
                <a th:href="${basePath + filePgNum}"
                            th:text="${i}"
                            th:class="(${currentPageNumber == i} ? 'current' : '')"></a>
            </span>

            <span th:if="${currentPageNumber < numberOfPages}">
                <a th:href="${basePath + ((nextPgNum > 1) ? nextPgNum : '')}"
                            th:text="'Next&rarr;'"></a>
            </span>
        </span>
    </nav>
</body>
</html>
